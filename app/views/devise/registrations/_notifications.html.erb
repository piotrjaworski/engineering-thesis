<h2>Receive new notifications about</h2>
<%= form_for @user, url: preferences_profiles_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :post_notifications, "New private message" %>
    <br>
    <%= f.check_box :post_notifications %>
  </div>
  <div class="form-group">
    <%= f.label :message_notifications, "New posts in my topics / topics in which I posted" %>
    <br>
    <%= f.check_box :message_notifications %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
