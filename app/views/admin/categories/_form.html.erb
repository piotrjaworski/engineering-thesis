<%= simple_form_for([:admin, category], html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.input :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.color_field :color %>
  </div>
  <%= f.submit "Create", class: "btn btn-success" %>
<% end %>
