<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Categories</h3>
    </div>
    <div class="panel-body">
      <%= link_to "All categories", admin_categories_path, class: "btn btn-success" %>
      <%= link_to "Add a new category", new_admin_category_path, class: "btn btn-warning", remote: true %>
      <table class="table table-admin">
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td class="col-md-8"><%= category.name %></td>
              <td class="col-md-2"><%= category_box(category) %></td>
              <td class="col-md-1"><%= link_to "Edit", edit_admin_category_path(category), remote: true, class: "btn btn-primary btn-sm" %></td>
              <td class="col-md-1">
                <% if category.no_topics? %>
                  <%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure that you want to delete #{category.name} category?"} %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
