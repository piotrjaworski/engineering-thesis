<%= tinymce_assets %>
<%= tinymce %>
<%= simple_form_for @message_thread, html: { novalidate: true } do |f| %>
  <%= label_tag :addressee, "User" %>
  <%= text_field_tag :addressee, "#{@addressee.full_name} <#{@addressee.email}>", class: "form-control", readonly: true %>
  <%= f.input :addressee_id, as: :hidden %>
  <%= f.input :topic, class: "form-control", input_html: { required: true } %>
  <%= f.simple_fields_for :message do |mf| %>
    <%= mf.input :content, as: :text, input_html: { class: "tinymce", rows: 20, cols: 120 } %>
  <% end %>
  <%= f.submit "Send", class: "btn btn-primary" %>
<% end %>
