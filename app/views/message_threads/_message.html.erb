<hr>
<div class="row">
  <div class="col-md-2">
    <%= image_tag message.sender.avatar(:small), class: "round-image" %>
  </div>
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-9">
        <b><%= message.sender.username %></b>
      </div>
      <div class="col-md-3">
        <span class="pull-right"><%= time_ago_in_words(message.created_at) %> ago</span>
      </div>
    </div>
    <%= message.content.html_safe %>
  </div>
</div>
