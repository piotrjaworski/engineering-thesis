<h2><%= @topic.name %></h2>
<p><%= @topic.category.name %>

<div class="row">
  <div class="col-md-12 flash-messages">
    <%= render partial: "shared/flash_messages" %>
  </div>
</div>

<% @posts.each do |post| %>
  <%= render partial: "post", locals: { post: post } %>
<% end %>

<div id="post-reply-box">
  <% if user_signed_in? %>
    <%= link_to "Add reply", new_topic_post_path(@topic), class: "btn btn-primary", id: "add-post-reply", remote: true %>
    <div id="new-post-reply" style="display: none;">
    </div>
    <div id="edit-post" style="display: none;">
    </div>
  <% else %>
    <%= link_to "Login to Add Post", new_topic_post_path(@topic), class: "btn btn-success" %>
  <% end %>
</div>
