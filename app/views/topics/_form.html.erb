<%= tinymce_assets %>
<%= tinymce %>
<div class="row">
  <div class="col-md-12">
    <%= simple_form_for topic, remote: true do |f| %>
      <a class="close-button pull-right">&times;</a>
      <h2 class="modal-title">Create a New Topic:</h2>

      <%= f.input :name, input_html: { required: true } %>
      <%= f.input :category_id, collection: Category.all, prompt: "Select a category...", required: true %>
      <%= f.input :description %>
      <%= f.fields_for :posts do |p| %>
        <%= p.input :content, as: :text, input_html: { class: "tinymce" } %>
      <% end %>
      <%= f.submit "Add", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

