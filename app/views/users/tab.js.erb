<% if @tab == "all" %>
  <% if params[:page] %>
    $('#user-all-content').append('<%= j(render partial: 'all')%>');
    <% if @all.next_page %>
      $('.pagination').replaceWith('<%= j will_paginate(@all) %>');
    <% else %>
      $('.pagination').remove();
    <% end %>
  <% else %>
    $("#all").html("<%= j(render partial: 'all_content') %>");
  <% end %>

