<table class="table table-hover">
  <thead>
    <tr>
      <th>Topic</th>
      <th>Category</th>
      <th>Users</th>
      <th>Posts</th>
      <th>Views</th>
      <th>Activity</th>
    </tr>
  </thead>
  <tbody>
    <% topics.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.category.name %></td>
        <td><%= t.user.email %></td>
        <td><%= t.posts_count %></td>
        <td><%= t.posts_count %></td>
        <td><%= t.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
